<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="LoginPane" prefHeight="300.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sfod.FXMLLoginControler">
    <children>
        <Button fx:id="loginButton" defaultButton="true" layoutX="59.0" layoutY="209.0" onAction="#handleButtonAction" text="Iniciar Sessió" />
        <Label fx:id="loginTitle" layoutX="39.0" layoutY="42.0" minHeight="16" minWidth="69" text="Inicia Sessió" textAlignment="CENTER">
         <font>
            <Font size="23.0" />
         </font></Label>
      <TextField fx:id="loginUser" alignment="CENTER" layoutX="25.0" layoutY="102.0" prefHeight="25.0" prefWidth="151.0" promptText="Usuari" />
      <PasswordField fx:id="loginPswd" alignment="CENTER" layoutX="26.0" layoutY="138.0" promptText="Contrasenya" />
      <Label fx:id="loginError" alignment="CENTER" layoutX="19.0" layoutY="172.0" prefHeight="25.0" prefWidth="164.0" text="Usuari o contrasenya incorrectes" textFill="RED">
         <font>
            <Font size="11.0" />
         </font>
      </Label>
      <Label fx:id="loginInfo" alignment="CENTER" layoutX="63.0" layoutY="176.0" text="Iniciant sessió" textAlignment="CENTER" textFill="#00ff2f" />
    </children>
</AnchorPane>
